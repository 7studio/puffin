include /abstracts/mixins.pug

.sb-Root
    h1.sb-Heading.sb-Heading--large Grid

    h2.sb-Heading.sb-Heading--medium Auto-layout columns
    div.sb-u-mb-8
        div.sb-u-mb-4
            ul.cn-Grid
                each val in new Array(3)
                    li.cn-Grid__item
                        .sb-FakeContent.sb-FakeContent--auto Auto
        
        div.sb-u-mb-4
            ul.cn-Grid
                each val in new Array(4)
                    li.cn-Grid__item
                        .sb-FakeContent.sb-FakeContent--auto Auto

        div.sb-u-mb-4
            ul.cn-Grid
                each val in new Array(12)
                    li.cn-Grid__item
                        .sb-FakeContent.sb-FakeContent--auto.sb-u-px-0 Auto

    h2.sb-Heading.sb-Heading--medium Fixed columns number
    div.sb-u-mb-8
        div.sb-u-mb-4
            h3.sb-Heading.sb-Heading--small 
                | Three columns into&#32;
                code .cn-Grid--2cols
            ul.cn-Grid.cn-Grid--2cols
                each val in new Array(3)
                    li.cn-Grid__item
                        .sb-FakeContent 1/2
        div.sb-u-mb-4
            h3.sb-Heading.sb-Heading--small 
                | Five columns into&#32;
                code .cn-Grid--6cols
            ul.cn-Grid.cn-Grid--6cols
                each val in new Array(5)
                    li.cn-Grid__item
                        .sb-FakeContent 1/6
    
    h2.sb-Heading.sb-Heading--medium Variable row sizes
    div.sb-u-mb-8
        ul.cn-Grid
            li.cn-Grid__item.cn-Grid__item--span-4
                .sb-FakeContent 1/3
            li.cn-Grid__item.cn-Grid__item--span-6
                .sb-FakeContent 1/2
            li.cn-Grid__item.cn-Grid__item--span-2
                .sb-FakeContent 1/6
            li.cn-Grid__item.cn-Grid__item--span-3
                .sb-FakeContent 1/4
            li.cn-Grid__item.cn-Grid__item--span-5
                .sb-FakeContent 5/12
            li.cn-Grid__item.cn-Grid__item--span-1
                .sb-FakeContent.sb-u-px-0 1/12

    h2.sb-Heading.sb-Heading--medium Nested grids
    div.sb-u-mb-8
        ul.cn-Grid
            li.cn-Grid__item
                ul.cn-Grid.cn-u-color-purple(style={outline:'1px solid'})
                    each val in new Array(3)
                        li.cn-Grid__item
                            .sb-FakeContent.sb-FakeContent--auto Auto
            li.cn-Grid__item.cn-Grid__item--span-8
                .sb-FakeContent 3/4
    
    h2.sb-Heading.sb-Heading--medium 
        | Equal row heights&#32;
        code .cn-Grid--equalheight
